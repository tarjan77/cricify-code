<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <View android:id="@+id/exo_controls_background" android:background="@color/exo_black_opacity_30" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/custom_controls" android:background="@color/cb" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/top_bar" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageButton android:id="@+id/exo_back" android:src="@drawable/ic_back" app:tint="@color/white" style="@style/ExoStyledControls.Button.Bottom"/>
            <HorizontalScrollView android:id="@+id/horizontalScrollView" android:scrollbars="none" android:clipToPadding="false" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_margin="@dimen/_5sdp" android:layout_weight="1">
                <com.google.android.material.chip.ChipGroup android:id="@+id/servers" android:layout_width="wrap_content" android:layout_height="wrap_content" app:chipSpacingHorizontal="@dimen/_4sdp" app:selectionRequired="true" app:singleSelection="true"/>
            </HorizontalScrollView>
            <ImageButton android:id="@+id/exo_pip" android:padding="@dimen/_6sdp" android:src="@drawable/ic_picture_in_picture" style="@style/ExoStyledControls.Button.Bottom"/>
            <ImageButton android:id="@+id/exo_settings" android:src="@drawable/ic_settings" app:tint="@color/white" style="@style/ExoStyledControls.Button.Bottom"/>
            <ImageButton android:id="@+id/exo_mute" android:src="@drawable/volum_selector" app:tint="@color/white" style="@style/ExoStyledControls.Button.Bottom"/>
            <ImageButton android:id="@+id/exo_lock" android:src="@drawable/locker" app:tint="@color/white" style="@style/ExoStyledControls.Button.Bottom"/>
        </LinearLayout>
        <View android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/bottom_controller" android:paddingTop="4dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:gravity="right|center_vertical|center_horizontal|center|end" android:orientation="horizontal" android:id="@+id/right_ly" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <ImageView android:id="@+id/adjust_btn" android:src="@drawable/mode_fill" style="@style/ExoStyledControls.Button.Bottom"/>
                <ImageButton android:id="@+id/exo_prev" android:visibility="gone" style="@style/ExoMediaButton.Previous"/>
                <FrameLayout android:id="@+id/exo_exo_rew_container" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <ImageButton android:id="@+id/exo_rew" style="@style/ExoMediaButton.Rewind"/>
                </FrameLayout>
            </LinearLayout>
            <ImageButton android:id="@+id/exo_play_pause" android:padding="@dimen/_7sdp" style="@style/ExoStyledControls.Button.Center.PlayPause"/>
            <LinearLayout android:gravity="left|center_vertical|center_horizontal|center|start" android:orientation="horizontal" android:id="@+id/left_ly" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <FrameLayout android:id="@+id/exo_ffwd_container" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <ImageButton android:id="@+id/exo_ffwd" style="@style/ExoMediaButton.FastForward"/>
                </FrameLayout>
                <ImageButton android:id="@+id/exo_next" android:visibility="gone" style="@style/ExoMediaButton.Next"/>
                <ImageButton android:id="@+id/btn_related" android:visibility="gone" android:src="@drawable/ic_more" style="@style/ExoStyledControls.Button.Bottom"/>
                <ImageButton android:id="@+id/exo_fullscreen_btn" android:src="@drawable/orientation_icon" style="@style/ExoStyledControls.Button.Bottom"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/timer_bar_ly" android:paddingLeft="@dimen/_8sdp" android:paddingRight="@dimen/_8sdp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/_3sdp" android:paddingHorizontal="@dimen/_8sdp">
            <TextView android:textSize="14sp" android:textStyle="bold" android:textColor="#ffbebebe" android:id="@+id/exo_position" android:paddingLeft="4dp" android:paddingRight="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:includeFontPadding="false"/>
            <androidx.media3.ui.DefaultTimeBar android:id="@+id/exo_progress" android:layout_width="0dp" android:layout_height="26dp" android:layout_weight="1"/>
            <TextView android:textSize="14sp" android:textStyle="bold" android:textColor="#ffbebebe" android:id="@+id/exo_duration" android:paddingLeft="4dp" android:paddingRight="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:includeFontPadding="false"/>
        </LinearLayout>
    </LinearLayout>
</merge>
