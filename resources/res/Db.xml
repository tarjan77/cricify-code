<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/mobile_navigation.xml" app:startDestination="@+id/navigation_home">
    <fragment android:label="@string/app_name" android:name="com.android.vending.fragments.HomeFragment" android:id="@+id/navigation_home">
        <action android:id="@+id/action_navigation_home_to_channelsFragment" app:destination="@+id/channelsFragment"/>
    </fragment>
    <fragment android:label="{cat}" android:name="com.android.vending.fragments.ChannelsFragment" android:id="@+id/channelsFragment">
        <argument android:name="cat" app:argType="string"/>
    </fragment>
    <activity android:label="activity_player" android:name="com.android.vending.player.PlayerActivity" android:id="@+id/playerActivity">
        <argument android:name="isStream" android:defaultValue="false" app:argType="boolean"/>
        <argument android:name="query" android:defaultValue="" app:argType="string"/>
        <argument android:name="format" android:defaultValue="-1" app:argType="integer"/>
        <argument android:name="api" android:defaultValue="" app:argType="string"/>
        <argument android:name="related" android:defaultValue="@null" app:argType="java.io.Serializable" app:nullable="true"/>
        <argument android:name="headers" android:defaultValue="@null" app:argType="java.io.Serializable" app:nullable="true"/>
    </activity>
    <fragment android:label="@string/sports" android:name="com.android.vending.fragments.ChannelsFragment" android:id="@+id/navigation_sports">
        <argument android:name="cat" android:defaultValue="Sports" app:argType="string"/>
    </fragment>
    <fragment android:label="SearchFragment" android:name="com.android.vending.fragments.SearchFragment" android:id="@+id/searchFragment"/>
    <fragment android:label="@string/favourites" android:name="com.android.vending.fragments.FavouriteFragment" android:id="@+id/favouriteFragment"/>
    <fragment android:label="@string/categories" android:name="com.android.vending.fragments.CatFragment" android:id="@+id/catFragment">
        <action android:id="@+id/action_catFragment_to_channelsFragment" app:destination="@+id/channelsFragment"/>
        <action android:id="@+id/action_catFragment_to_playlist_nav" app:destination="@+id/playlist_nav"/>
    </fragment>
    <fragment android:label="{title}" android:name="com.android.vending.fragments.WebFragment" android:id="@+id/webFragment">
        <argument android:name="title" app:argType="string"/>
        <argument android:name="link" android:defaultValue="https://www.cricbuzz.com/" app:argType="string"/>
    </fragment>
    <dialog android:label="AlertFragment" android:name="com.android.vending.fragments.AlertFragment" android:id="@+id/alertFragment"/>
    <fragment android:label="@string/playlists" android:name="com.android.vending.fragments.PlaylistsFragment" android:id="@+id/playlistsFragment">
        <action android:id="@+id/action_playlistsFragment_to_playlistNav" app:destination="@+id/playlist_nav"/>
    </fragment>
    <fragment android:label="@string/notifications" android:name="com.android.vending.fragments.NotificationsFragment" android:id="@+id/notificationsFragment"/>
    <navigation android:id="@+id/playlist_nav" app:startDestination="@+id/playlistFragment">
        <fragment android:label="{title}" android:name="com.android.vending.fragments.PlaylistFragment" android:id="@+id/playlistFragment">
            <argument android:name="path" app:argType="string"/>
            <argument android:name="title" app:argType="string"/>
            <action android:id="@+id/action_playlistFragment_to_categorySelectionFragment" app:destination="@+id/categorySelectionFragment"/>
        </fragment>
        <dialog android:label="@string/chose_category" android:name="com.android.vending.fragments.CategorySelectionFragment" android:id="@+id/categorySelectionFragment"/>
        <argument android:name="path" app:argType="string"/>
        <argument android:name="title" app:argType="string"/>
    </navigation>
</navigation>
